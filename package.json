{
    "name": "rn-palette-ui",
    "version": "0.1.0",
    "description": "A React Native UI component library implementing the Material 3 design system.",
    "main": "./lib/module/index.js",
    "types": "./lib/typescript/src/index.d.ts",
    "exports": {
        ".": {
            "source": "./src/index.tsx",
            "types": "./lib/typescript/src/index.d.ts",
            "default": "./lib/module/index.js"
        },
        "./package.json": "./package.json"
    },
    "files": [
        "src",
        "lib",
        "android",
        "ios",
        "cpp",
        "*.podspec",
        "react-native.config.js",
        "!ios/build",
        "!android/build",
        "!android/gradle",
        "!android/gradlew",
        "!android/gradlew.bat",
        "!android/local.properties",
        "!**/__tests__",
        "!**/__fixtures__",
        "!**/__mocks__",
        "!**/.*"
    ],
    "scripts": {
        "example": "yarn workspace rn-palette-ui-example",
        "test": "jest",
        "typecheck": "tsc",
        "lint": "eslint \"**/*.{js,ts,tsx}\"",
        "clean": "del-cli lib",
        "prepare": "bob build",
        "release": "release-it --only-version"
    },
    "keywords": [
        "react-native",
        "ios",
        "android"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/mykelcodes/rn-palette-ui.git"
    },
    "author": "Michael Olawale <tech@mykelcodes.com> (https://github.com/mykelcodes)",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/mykelcodes/rn-palette-ui/issues"
    },
    "homepage": "https://github.com/mykelcodes/rn-palette-ui#readme",
    "publishConfig": {
        "registry": "https://registry.npmjs.org/"
    },
    "devDependencies": {
        "@commitlint/config-conventional": "^19.8.1",
        "@eslint/compat": "^1.2.9",
        "@eslint/eslintrc": "^3.3.1",
        "@eslint/js": "^9.27.0",
        "@evilmartians/lefthook": "^1.11.13",
        "@react-native/babel-preset": "0.79.2",
        "@react-native/eslint-config": "^0.79.2",
        "@release-it/conventional-changelog": "^10.0.1",
        "@types/jest": "^29.5.14",
        "@types/react": "^19.1.5",
        "commitlint": "^19.8.1",
        "del-cli": "^6.0.0",
        "eslint": "^9.27.0",
        "eslint-config-prettier": "^10.1.5",
        "eslint-plugin-prettier": "^5.4.0",
        "jest": "^29.7.0",
        "prettier": "^3.5.3",
        "react": "19.0.0",
        "react-native": "0.79.2",
        "react-native-builder-bob": "^0.40.11",
        "release-it": "^19.0.2",
        "typescript": "^5.8.3"
    },
    "peerDependencies": {
        "react": "*",
        "react-native": "*"
    },
    "workspaces": [
        "example"
    ],
    "packageManager": "yarn@3.6.1",
    "jest": {
        "preset": "react-native",
        "modulePathIgnorePatterns": [
            "<rootDir>/example/node_modules",
            "<rootDir>/lib/"
        ]
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "release-it": {
        "git": {
            "commitMessage": "chore: release ${version}",
            "tagName": "v${version}"
        },
        "npm": {
            "publish": true
        },
        "github": {
            "release": true
        },
        "plugins": {
            "@release-it/conventional-changelog": {
                "preset": {
                    "name": "angular"
                }
            }
        }
    },
    "react-native-builder-bob": {
        "source": "src",
        "output": "lib",
        "targets": [
            [
                "module",
                {
                    "esm": true
                }
            ],
            [
                "typescript",
                {
                    "project": "tsconfig.build.json"
                }
            ]
        ]
    },
    "create-react-native-library": {
        "languages": "js",
        "type": "library",
        "version": "0.50.3"
    }
}
